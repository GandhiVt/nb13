<?xml version="1.0" encoding="utf-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    id        = "kmrs.mobile.app"
    version   = "1.3.3">
    <name>Mi Br 24.1.3</name>
    <description>
        Karenderia mobile app version
    </description>
    <author email="basti@codemywebapps.com" href="http://cordova.io">
        codemywebapps.com
    </author>
    <icon src="icon.png" />           
    <content src="index.html" />
               
	<preference name="orientation" value="portrait" />
	<preference name="android-build-tool" value="gradle" />
	<preference name="permissions" value="none"/>	
		
	<plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="phonegap-plugin-push" spec="1.5.3" />
    <plugin name="cordova-plugin-device" spec="1.1.6" /> 	
	<plugin name="cordova-plugin-inappbrowser" spec="1.7.1" />   		
	<plugin name="cordova-plugin-splashscreen" spec="4.0.3" />
    <plugin name="cordova-plugin-geolocation" spec="2.4.3" />
	<plugin name="cordova-plugin-network-information" spec="1.3.3" />
		
	<plugin spec="https://github.com/rodrigo-martinezd/cordova-dialog-gps.git" source="git" />

	<gap:splash src="splash.png" />
	<preference name="AutoHideSplashScreen" value="false" />  	
    <preference name="SplashScreenDelay" value="10000" />    
    <preference name="fullscreen" value="false" />
	
    <access origin="*" />
       
    <gap:config-file platform="android" parent="/manifest">
        <supports-screens android:xlargeScreens="true" android:largeScreens="true" android:smallScreens="true" />
        <application android:theme="@android:style/Theme.NoTitleBar" >            
        </application>
    </gap:config-file>    
    
</widget>

